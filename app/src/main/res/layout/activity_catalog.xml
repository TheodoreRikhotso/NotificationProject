<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_catalog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Computers/Laptops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAllCaps="false"
                android:textStyle="normal|bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:layout_width="360dp"
                android:layout_height="180dp"
                android:id="@+id/ListViewCatalog"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:requiresFadingEdge="vertical"
                android:fadingEdgeLength="48dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:background="@drawable/gradient"/>
        </LinearLayout>



            <View android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@android:color/black"/>


            <TextView
                android:text="Mobile Phones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPhones"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_below="@+id/ListViewCatalog"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="373dp"
                android:layout_height="180dp"
                android:id="@+id/ListViewPhones"
                android:layout_below="@+id/textViewPhones"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <View android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@android:color/black"/>




<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.notificationproject.ProfileActivityIcon">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9CD65F"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayoutPro"
                android:layout_marginLeft="30dp"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/imProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/view2"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.04"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/profile_icon_" />

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tvUserEmail"
                        android:layout_alignStart="@+id/tvUserEmail"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1.02"
                        android:text="UserName"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvUserName"
                        android:layout_marginBottom="24dp"
                        android:layout_toEndOf="@+id/tvUserName"
                        android:text="UserEmail"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>



            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_above="@+id/linearLayout2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="160dp"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:id="@+id/llAbout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="190dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/view3"
                    android:layout_alignEnd="@+id/imageButton6"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/info_button04" />

            <TextView
                android:gravity="center"
                android:id="@+id/tvAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="About us"
                android:textSize="14sp" />





            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_above="@+id/linearLayout2"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="250dp"

                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:id="@+id/llFaq"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="260dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="50dp"
                android:layout_height="50dp"


                android:background="@android:color/transparent"
                app:srcCompat="@drawable/round_button07" />

            <TextView
                android:gravity="center"
                android:id="@+id/tvFAQ"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="FAQ'S"
                android:textSize="14sp" />
            </LinearLayout>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_above="@+id/linearLayout2"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="320dp"

                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:id="@+id/llContact"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="335dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/view5"
                    android:layout_toStartOf="@+id/view5"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/phone_book03" />
            <TextView
                android:id="@+id/TVContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:text="Contact Us"
                android:textSize="14sp" />


            </LinearLayout>

            <View

                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_above="@+id/linearLayout2"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="390dp"

                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/lllogout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="400dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/view6"
                    android:layout_toStartOf="@+id/view6"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/logout3" />
            <TextView

                android:id="@+id/tvLogOut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:gravity="center"
                android:text="Log Out"
                android:textSize="14sp" />


            </LinearLayout>


            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_above="@+id/linearLayout2"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="460dp"

                android:background="@android:color/darker_gray" />


        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.notificationproject.ConfirmRequestActivty">
    <TextView
        android:text="Asset Reserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDay"
        android:textSize="20sp"
        android:textColor="#cb000000"
        android:visibility="invisible"
        android:textStyle="normal|bold"
        android:fontFamily="serif-monospace"
        android:layout_alignBottom="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />
    <TextView
        android:text="Item Loading..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Loading"
        android:textSize="18sp"
        android:visibility="visible"
        android:textColor="#cb000000"
        android:textStyle="normal|bold"
        android:fontFamily="serif-monospace"
        android:layout_alignBottom="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />
    <TextView
        android:text="Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:fontFamily="serif-monospace"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/book"
        android:id="@+id/ivIcon"
        android:layout_marginBottom="11dp"
        android:visibility="invisible"
        android:layout_above="@+id/tvDay"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />
    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/progress_bar_2"
        app:max="100"
        app:ringColor="#ccf28e0b"
        app:ringProgressColor="#d2669012"
        app:ringWidth="10dp"
        app:style="STROKE"
        app:textColor="#ccf28e0b"
        app:textIsShow="true"
        app:textSize="15dp"
        android:textAlignment="gravity"
        android:fontFamily="serif-monospace"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout"
        android:gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tvDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:text="27 Friday 2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView11"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11" />
        <TextView
            android:text="Human Resources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="1"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />
        <TextView
            android:text="Pick Up Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />
        <TextView
            android:text="Department"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />
        <TextView
            android:text="Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView12"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="10dp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />
        <TextView
            android:text="eg. Laptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />
        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />
        <TextView
            android:text="Booked Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />
    </RelativeLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.admin.notificationproject.ConfirmRequestActivty">


    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:fontFamily="serif-monospace"
        android:text="Booking Requested"
        android:textColor="#ec669900"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:fontFamily="serif-monospace"
        android:text="Item Loading..."
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:fontFamily="serif-monospace"
        android:text="Order"
        android:textColor="@android:color/holo_green_light"
        android:textSize="34sp"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/tvDay"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_marginBottom="11dp"
        android:visibility="invisible"
        android:layout_marginRight="23dp"
        app:srcCompat="@drawable/check0" />


    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:id="@+id/progress_bar_2"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:textAlignment="gravity"
        app:max="100"
        app:ringColor="@android:color/darker_gray"
        app:ringProgressColor="@android:color/holo_green_light"
        app:ringWidth="10dp"
        app:style="STROKE"
        app:textColor="@android:color/transparent"
        app:textIsShow="true"
        app:textSize="15dp" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#9CD65F"
        android:text="Ok"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18dp"
        app:srcCompat="@drawable/requestbutton" />


    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDay"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:text="27 Friday 2017"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/tvDert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_weight="1"
            android:text="Human Resources"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:text="Department"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="normal|bold" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvDates"
            android:layout_alignStart="@+id/tvDates"
            android:layout_below="@+id/tvDates"
            android:layout_marginTop="10dp"
            android:text="Quantity"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eg. Laptop"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:text="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignLeft="@+id/tvDert"
            android:layout_alignStart="@+id/tvDert"
            android:text="Booked Item"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/tvDert"
            android:layout_toRightOf="@+id/tvDert"
            android:text="Date Requested"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="normal|bold" />


    </RelativeLayout>


</RelativeLayout>



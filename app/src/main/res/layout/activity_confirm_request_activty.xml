<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_request"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginTop="60dp"
    android:background="@android:color/white"
    tools:context="com.example.admin.notificationproject.ConfirmRequestActivty">


    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:fontFamily="serif-monospace"
        android:text="Booking Requested"
        android:textColor="#ec669900"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:fontFamily="serif-monospace"
        android:text="Item Loading..."
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_bar_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:fontFamily="serif-monospace"
        android:text="Order"
        android:textColor="@android:color/holo_green_light"
        android:textSize="34sp"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/tvDay"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_marginBottom="11dp"
        android:visibility="invisible"
        android:layout_marginRight="23dp"
        app:srcCompat="@drawable/check0" />


    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:id="@+id/progress_bar_2"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:textAlignment="gravity"
        app:max="100"
        app:ringColor="@android:color/darker_gray"
        app:ringProgressColor="@android:color/holo_green_light"
        app:ringWidth="10dp"
        app:style="STROKE"
        app:textColor="@android:color/transparent"
        app:textIsShow="true"
        app:textSize="15dp" />



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_below="@+id/tvDay"
    android:layout_alignParentStart="true"
    android:id="@+id/relativeLayout4">

    <RelativeLayout
        android:layout_width="192dp"
        android:layout_height="160dp"
        android:layout_marginTop="17dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:gravity="">

        <TextView
            android:id="@+id/textView5"
            android:textColor="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Department"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>


        <TextView
        android:id="@+id/tvDert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:text="Human Resources"
        android:textStyle="normal|bold"
        android:textAlignment="center"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />

        <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booked Item"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_below="@+id/tvDert"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <TextView
        android:id="@+id/tvType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="eg. Laptop"
        android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="192dp"
        android:layout_height="160dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout">


        <TextView
            android:id="@+id/textView11"
            android:textColor="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="   Date Requested"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <TextView
        android:id="@+id/tvDates"
        android:text=" 27 Friday 2017"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textStyle="normal|bold"
        android:textAlignment="center"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true" />


        <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Color"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_below="@+id/tvDates"
            android:layout_alignParentStart="true" />

        <TextView
        android:id="@+id/tvColorBooked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Black"
        android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



</RelativeLayout>



    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical"-->
        <!--android:gravity="center"-->
        <!--android:layout_alignBottom="@+id/relativeLayout4">-->

        <Button
            android:id="@+id/btnOk"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#9CD65F"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:textSize="18dp"
            app:srcCompat="@drawable/requestbutton"
            android:layout_gravity="center"
            android:layout_marginBottom="11dp"
            android:layout_alignBottom="@+id/relativeLayout4"
            android:layout_centerHorizontal="true" />

    <!--</LinearLayout>-->




</RelativeLayout>



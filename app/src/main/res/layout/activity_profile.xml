<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="15dp"/>

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/diagonalLayout"
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_height="266dp"
        diagonal:diagonal_angle="10"
        android:elevation="0dp"
        android:paddingBottom="16dp"
        diagonal:diagonal_direction="left"
        diagonal:diagonal_position="bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbarCar">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background">

            </com.flaviofaria.kenburnsview.KenBurnsView>






    </com.github.florent37.diagonallayout.DiagonalLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="190dp"
        android:elevation="15dp"
        android:background="@drawable/circle"
        android:src="@drawable/person"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name and Surna"
        android:textColor="@android:color/black"
        android:layout_gravity="top|left"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="30dp"
android:layout_below="@id/avatar"
        android:textSize="25sp"
        />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/txtName"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"

        >

        <TextView
            android:id="@+id/tvDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTOR"
            android:textColor="@android:color/black"
            android:layout_gravity="top|left"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tvStuffNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCER"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="top|left"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            />
    </LinearLayout>
    <com.baoyachi.stepview.VerticalStepView
        android:id="@+id/vStV"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:layout_below="@id/vStV"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <TextView
            android:textColor="#006400"
            android:textStyle="bold|italic"
            android:textSize="15dp"
            android:id="@+id/teext"
            android:text=" Requested Asset:"
            android:layout_below="@id/list"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />

    <android.support.v7.widget.RecyclerView

        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="48dp"
        android:id="@+id/rvUserItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teext"
        android:textColor="#717171"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
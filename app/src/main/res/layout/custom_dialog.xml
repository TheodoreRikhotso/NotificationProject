<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/locata"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="300dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="#F2F2F2"
            android:orientation="vertical">

            <!--<android.support.v7.widget.CardView-->
            <!--android:id="@+id/card"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:layout_gravity="center"-->
            <!--app:cardCornerRadius="10dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="#9CD65F">

                <TextView
                    android:id="@+id/tvPopTitle"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Product Name"
                    android:textSize="20dp"
                  />
            </LinearLayout>

            <!--</android.support.v7.widget.CardView>-->


            <ImageView
                android:id="@+id/ivPopImage"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/tvPopTitle"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/ivPopDate"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/ivPopImage"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ivPopReturnDate"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/ivPopDate"

                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ivPopColor"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/ivPopReturnDate"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="#000"
                android:textSize="15dp" />

            <View
                android:id="@+id/view01"
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="#9CD65F" />

            <Button
                android:id="@+id/btnOkay"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>